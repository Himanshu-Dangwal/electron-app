{
    "compilerOptions": {
        //require strict types : (null-save)
        "strict": true,
        //tell Typescript to generate ESM (ES Module) Syntax
        "target": "ESNext",
        //tell Typescript to require ESM Syntax as input
        "module": "NodeNext",
        // defines where to put the generated js
        "outDir": "../../dist-electron",
        //ignores errors from dependencies
        "skipLibCheck" : true
    }
}